<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blurred_elements"
    tools:context="uk.os.unplugged.updater.android.demo.MainActivity"
    >

    <Button
        android:id="@+id/activity_loading_request_sdcard_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_activity_0_request_perms"
        android:onClick="onRequestReadPermissions"
        android:layout_above="@+id/activity_loading_make_test_files"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/activity_loading_make_test_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_activity_1_create_test_files"
        android:onClick="onMakeTestFiles"
        android:layout_above="@+id/activity_loading_make_broken_test_files"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/activity_loading_make_broken_test_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_activity_1_1_create_broken_files"
        android:onClick="onMakeBrokenTestFiles"
        android:layout_above="@+id/activity_loading_request_copy"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/activity_loading_request_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_activity_2_copy"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onUpdate" />

    <Button
        android:id="@+id/activity_loading_delete_test_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_activity_3_delete_test_files"
        android:onClick="onDeleteTestFiles"
        android:layout_below="@+id/activity_loading_request_copy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/activity_loading_service_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:onClick="onDeleteTestFiles"
        android:layout_below="@+id/activity_loading_errors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        tools:text="Service Connected" />

    <ProgressBar
        android:id="@+id/activity_loading_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_loading_busy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/activity_loading_busy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_loading_delete_test_files"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        tools:text="Step X of Y" />


    <TextView
        android:id="@+id/activity_loading_errors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF819B"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:layout_below="@+id/activity_loading_progress_bar"
        android:layout_centerHorizontal="true"
        tools:text="Errors" />

</RelativeLayout>
